{
    "version": 6,
    "configurePresets": [
        {
            "name": "contour-common",
            "hidden": true,
            "description": "Common settings for all configurations",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "PEDANTIC_COMPILER": "ON",
                "PEDANTIC_COMPILER_WERROR": "ON",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}"
            }
        },
        {
            "name": "release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CONTOUR_TESTING": "ON"
            }
        },
        {
            "name": "linux-common",
            "hidden": true,
            "inherits": "contour-common",
            "generator": "Ninja",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "linux-clang",
            "hidden": true,
            "inherits": "linux-common",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "linux-gcc",
            "hidden": true,
            "inherits": "linux-common",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "linux-clang-release",
            "displayName": "Linux 64-bit (Clang)",
            "inherits": ["linux-clang", "release"]
        },
        {
            "name": "linux-clang-debug",
            "displayName": "Linux 64-bit (Clang)",
            "inherits": ["linux-clang", "debug"]
        },
        {
            "name": "linux-gcc-release",
            "displayName": "Linux 64-bit (GCC)",
            "inherits": ["linux-gcc", "release"]
        },
        {
            "name": "linux-gcc-debug",
            "displayName": "Linux 64-bit (GCC)",
            "inherits": ["linux-gcc", "debug"]
        },
        {
            "name": "windows-x64",
            "displayName": "Visual Studio Enterprise 2022 Release - x64",
            "description": "Using compilers for Visual Studio 17 2022 (64-bit)",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "toolset": {
                "value": "v143,host=x64",
                "strategy": "set"
            },
            "architecture": {
                "value": "X64",
                "strategy": "set"
            },
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows",
                "CMAKE_PREFIX_PATH": "C:/Qt/6.6.1/msvc2019_64",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_SYSTEM_VERSION": "10",
                "CMAKE_VERBOSE_MAKEFILE": "ON",
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/../3rdparty/vcpkg/scripts/buildsystems/vcpkg.cmake"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-clang-debug",
            "displayName": "Linux 64-bit - Clang - Debug",
            "configurePreset": "linux-clang-debug"
        },
        {
            "name": "linux-clang-release",
            "displayName": "Linux 64-bit - Clang - RelWithDebInfo",
            "configurePreset": "linux-clang-release"
        },
        {
            "name": "linux-gcc-debug",
            "displayName": "Linux 64-bit - GCC - Debug",
            "configurePreset": "linux-gcc-debug"
        },
        {
            "name": "linux-gcc-release",
            "displayName": "Linux 64-bit - GCC - RelWithDebInfo",
            "configurePreset": "linux-gcc-release"
        },
        {
            "name": "windows-x64-Debug",
            "displayName": "x64 - Debug",
            "configurePreset": "windows-x64",
            "configuration": "Debug"
        },
        {
            "name": "windows-x64-RelWithDebInfo",
            "displayName": "x64 - RelWithDebInfo",
            "configurePreset": "windows-x64",
            "configuration": "RelWithDebInfo"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "linux-clang",
            "output": {"outputOnFailure": true},
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ],
    "packagePresets": [
        {
            "name": "default",
            "configurePreset": "linux-clang",
            "generators": [ "TGZ" ]
        }
    ]
}
